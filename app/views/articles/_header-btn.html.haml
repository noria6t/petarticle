.header-low
  .header-low__row
    .left-header-low-btn.displayflex
      .main-contents-categories.displayflex
        %li.main-contents-categories__genres.header-hover-btn
          = fa_icon 'paw', class: 'header-btn__icon'
          ジャンル
          %ul#header-genre__list
            .parents__list
              - @genres.each do |genre|
                %li.parents__list-box
                  = link_to "##{genre.id}" do
                    #{genre.name}

        %li.main-contents-categories__categories.header-hover-btn
          = fa_icon 'paw', class: 'header-btn__icon'
          カテゴリ
          %ul#header-genre__list
            .parents__list
              - @categories.each do |category|
                %li.parents__list-box
                  = link_to "##{category.id + 30}" do
                    #{category.name}          
        .main-contents-categories__ranking
          = fa_icon 'paw', class: 'header-btn__icon'
          ランキング
        .main-contents-categories__lost_child
          = fa_icon 'paw', class: 'header-btn__icon'
          迷子
      .main-contents-other.displayflex
        -# .main-contents-other__follow
        -#   = fa_icon 'leaf', class: 'header-btn__icon'
        -#   フォロー
        .main-contents-other__myitem
          = fa_icon 'star', class: 'header-btn__icon'
          マイアイテム
        .main-contents-other__detailed-search
          = fa_icon 'search-plus', class: 'header-btn__icon'
          詳細検索

    .right-header-low-btn 
      .tweet-order 
        .tweet-order__new
          = fa_icon 'comment', class: 'header-btn__icon'
          キャンバス




        
