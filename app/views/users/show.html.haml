- breadcrumb :show_user          

.contents-box
  = current_user.name
    %p
    = @name
    さんの投稿一覧
    .article-detail__name  
    - @article.each do |article|
    .article-detail__content
    .article-post
      .article-post-content
        .article-post__title
        .article-detail__title
          = article.title
        .article__text  
        .article-detail__text
          = article.content
      - if article.images.present? 
        - article.images.each do |image|       
          .article-post__image  
            = image_tag "#{image.url}", class: 'article-post__image' 

  .kaminari
    = paginate(@article)

